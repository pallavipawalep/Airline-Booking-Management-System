          <img class="title-image" src="blueAirplane.png" alt="airplane-img">
        </div>
      </div>
    </div>



  </section>

  <!-- check_availability -->
  <section id="check_availability">
    <form action="search" method="POST">
      <div>
      <label for="search" class="search_label">Search</label>
      <input id="search" class="search" name="source" type="search" pattern=".*\S.*" required>
      <span class="caret"></span>
    </div>
    <div>
      <label for="search" class="search_label">Search</label>
      <input id="search" class="search" name="destination" type="search" pattern=".*\S.*" required>
      <span class="caret"></span>
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </section>



  <div class="container" id="go-to-ticket">
  <section class="ticket">
    <form action="ticketshow" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address:</label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
  </section>
  <br /><br />
  {{#if ticket}}
