    <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">ID</th>
      </tr>
    </thead>
    <tbody>
      {{#each listticket}}
      <tr>
        <td><a href="/ticket/{{id}}">{{date}}</a></td>

      </tr>
      {{/each}}
    </tbody>
  </table>

  </section>
  {{/if}}
