          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="#check_availability">Check availability</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="#go-to-ticket">Ticket</a>
            </li>
